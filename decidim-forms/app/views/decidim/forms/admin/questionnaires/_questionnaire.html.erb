<tr id="<%= dom_id(questionnaire) %>">
  <td>
    <%= translated_attribute(questionnaire.title) %>
  </td>

  <td>
    <%= questionnaire.questions.count %>
  </td>

  <td class="table-list__actions">
    <%= icon_link_to "pencil", edit_questionnaire_path(questionnaire), t(".edit"), class: "action-icon--edit-questionnaire" %>

    <% if allowed_to? :destroy, :questionnaire, questionnaire: questionnaire %>
      <%= icon_link_to "circle-x", questionnaire_path(questionnaire), t(".delete_questionnaire"), class: "action-icon--remove", method: :delete, data: { confirm: t(".delete_confirm") } %>
    <% end %>
  </td>
</tr>
